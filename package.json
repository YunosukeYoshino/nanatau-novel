{
  "name": "nanatau-novel",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --fix ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --fix ./src",
    "validate": "npm run typecheck && npm run lint && npm run format:check && npm run test:run",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YunosukeYoshino/nanatau-novel.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/YunosukeYoshino/nanatau-novel/issues"
  },
  "homepage": "https://github.com/YunosukeYoshino/nanatau-novel#readme",
  "description": "ななたう - 硝子の心、たう（届く）まで - Visual Novel Game",
  "dependencies": {
    "@drincs/pixi-vn": "^1.2.21",
    "@types/node": "^24.0.14",
    "typescript": "^5.8.3",
    "vite": "^7.0.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "husky": "^9.1.7",
    "vitest": "^3.2.4"
  }
}
